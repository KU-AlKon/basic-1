#include <iostream>
#include <string.h>
#include <cstdlib>
using namespace std;

int main()
{
    char arr[10][100] = { 0 };
    int N, cnt = 0, length, zero_one = 0, one_zero = 0, zero_zero = 0, one_one = 0;

    cin >> N;
    for (int i = 0; i < N; i++)
    {
        cin >> arr[i];
        length = strlen(arr[i]);
        for (int j = 0; j < length - 1; j++)
        {
            if (arr[i][j] != arr[i][j + 1])
                cnt++;
        }
        if (arr[i][0] == '0' && arr[i][length - 1] == '0')
            zero_zero++;
        if (arr[i][0] == '1' && arr[i][length - 1] == '1')
            one_one++;
        if (arr[i][0] == '0' && arr[i][length - 1] == '1')
            zero_one++;
        if (arr[i][0] == '1' && arr[i][length - 1] == '0')
            one_zero++;
        
    }

    int add = abs(zero_one - one_zero);

    if (add > 1)
        cnt += (add - 1);

    if (zero_zero > 0 && one_one > 0 && zero_one == 0 && one_zero == 0 )
        cnt++;

    cout << cnt;

    return 0;
}
